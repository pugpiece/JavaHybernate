<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration >
    <session-factory>

        <property name="connection.url"> jdbc:mysql://localhost:3306/Dishes </property>
        <property name= "connection.driver_class"> com.mysql.jdbc.Driver </property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.serverTimezone">UTC</property>
        <property name="connection.pool_size">1</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>
        <property name="hibernate.hbm2ddl.auto"> update </property>
        <property name="show_sql">false</property>
        <property name="format_sql"> false </property>
        <property name="use_sql_comments"> false </property>

        <mapping class="Entities.Chef"></mapping>
        <mapping class="Entities.Country"></mapping>
        <mapping class="Entities.Customer"></mapping>
        <mapping class="Entities.Dish"></mapping>
        <mapping class="Entities.Instrument"></mapping>
        <mapping class="Entities.Product"></mapping>
        <mapping class="Entities.Review"></mapping>
        <mapping class="Entities.Shop"></mapping>

    </session-factory>
</hibernate-configuration>